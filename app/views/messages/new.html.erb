<div class="header">
  <div class="container">
    <img src="https://cdn.pixabay.com/photo/2013/04/01/08/37/keyboard-98410_960_720.png">
    <h1>Messenger</h1>
  </div>
</div>

<div class="create">
  <div class="container">
   	<%= form_for(@message) do |f| %>  
  		<div class="field"> 
    		<%= f.label :message %><br> 
    		<%= f.text_area :content %> 
  		</div> 
  		<div class="actions"> 
    		<%= f.submit "Create" %> 
  		</div> 
		<% end %>
  </div>
</div>
