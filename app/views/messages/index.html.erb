<div class="header">
  <div class="container">
    <img src="https://cdn.pixabay.com/photo/2016/05/24/12/23/mouse-1412284_960_720.png">
  </div>
</div>

<div class="messages">
	
  <div class="container">
		<p class="opw">Open Shout Wall - write what you want :)</p>
  	<% @messages.each do |message| %> 
			<div class="message"> 
  			<p class="content"><%= message.content %></p> 
  			<p class="time"><%= message.created_at %></p> 
			</div> 
		<% end %>
		<%= link_to 'New Message', "messages/new" %>
  </div>
</div>